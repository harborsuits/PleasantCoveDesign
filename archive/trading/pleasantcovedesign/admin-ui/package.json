{
  "name": "benbot-trading-dashboard",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --port 3003",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:3003 electron .",
    "build": "tsc && vite build",
    "build:electron": "cross-env BUILD_TARGET_ELECTRON=1 vite build && electron-builder -m",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest --config jest.config.cjs",
    "test:unit": "jest --config jest.config.cjs --testPathPattern=tests/unit",
    "test:e2e": "playwright test",
    "test:watch": "jest --config jest.config.cjs --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "precommit:checks": "npm run typecheck && npm run lint && npm test -- --run",
    "prepare": "husky install"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-tabs": "^1.1.13",
    "@reduxjs/toolkit": "^2.9.0",
    "@tanstack/react-query": "^4.29.5",
    "@tanstack/react-query-devtools": "^4.40.1",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.6.1",
    "clsx": "^1.2.1",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.216.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^6.11.1",
    "recharts": "^2.15.4",
    "tailwind-merge": "^1.14.0",
    "zod": "^4.1.5",
    "zustand": "^5.0.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "jest --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.2.3",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "cross-env": "^7.0.3",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.41.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.1",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^16.1.5",
    "msw": "^2.10.5",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.3.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.8"
  },
  "build": {
    "appId": "com.bensbot.app",
    "productName": "BensBot Pro",
    "files": [
      "electron/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg",
        "zip"
      ]
    }
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
