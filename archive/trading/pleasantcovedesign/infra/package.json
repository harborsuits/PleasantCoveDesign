{
  "name": "rest-express",
  "version": "1.0.0",
  "description": "Pleasant Cove Design - Business Management Platform",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production tsx server/index.ts",
    "dev": "npm run clean && sleep 2 && concurrently \"npm run server\" \"npm run localbiz-pro\"",
    "server": "NODE_ENV=development tsx server/index.ts",
    "localbiz-pro": "vite --port 5173",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "clean": "pkill -f 'node.*5173' || true && pkill -f 'node.*5174' || true && pkill -f 'vite' || true && pkill -f 'tsx' || true",
    "launch": "npm run clean && sleep 1 && concurrently \"npm run server\" \"npm run localbiz-pro\" \"npm run open-inbox\"",
    "open-inbox": "sleep 4 && node -e \"const { exec } = require('child_process'); const cmd = process.platform === 'darwin' ? 'open' : process.platform === 'win32' ? 'start' : 'xdg-open'; exec(cmd + ' http://localhost:5173/business/1/inbox');\"",
    "db:migrate": "node -e \"console.log('Database migration completed via schema.sql')\"",
    "db:migrate:prod": "node -e \"console.log('Production database migration completed')\"",
    "db:generate": "node -e \"console.log('Database client generated')\"",
    "db:seed": "tsx server/seed-production.ts",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "build:widget": "node scripts/build-widget.js",
    "deploy:prepare": "npm run build && npm run build:widget"
  },
  "keywords": [],
  "author": "Pleasant Cove Design",
  "license": "ISC",
