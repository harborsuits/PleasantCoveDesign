{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": [
      "npm ci",
      "npm --prefix archive/lovable-ui-integration ci",
      "npm --prefix archive/lovable-ui-integration run build",
      "npm --prefix archive/Pleasantcovedesign-main ci",
      "npm --prefix archive/Pleasantcovedesign-main run build",
      "node archive/Pleasantcovedesign-main/scripts/postbuild-copy-ui.js"
    ].join(" && ")
  },
  "deploy": {
    "startCommand": "node archive/Pleasantcovedesign-main/dist/index.js",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}