{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS", 
    "buildCommand": "cd pleasantcovedesign/server && npm install && rm -rf dist && npm run build"
  },
  "deploy": {
    "startCommand": "cd pleasantcovedesign/server && npm start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
} 